@startuml

package "Model Layer" {
  class Habit {
    + id: string
    + name: string
    + frequency: string
  }

  class HabitLog {
    + habitId: string
    + date: Date
  }

  class ReminderSettingsModel {
    + time: string
    + enabled: boolean
  }
}

package "View Layer (React Components)" {

  class App {
    + renders MainScreen
  }

  class MainScreen {
    + renders HabitList
    + renders AddHabit
    + renders LogHabit
    + renders ReportPage
    + renders ReminderSettings
  }

  class HabitList {
    + displays list of habits
  }

  class HabitItem {
    + displays single habit
  }

  class AddHabit {
    + form to create habit
  }

  class LogHabit {
    + form to log habit completion
  }

  class ReportPage {
    + displays generated report
  }

  class ReminderSettings {
    + configure notifications
  }
}

package "Controller Layer" {

  class HabitController {
    + getHabits()
    + addHabit()
    + deleteHabit()
    + logCompletion()
  }

  class ReportController {
    + generateWeeklyReport()
    + generateMonthlyReport()
  }

  class ReminderController {
    + updateReminderSettings()
    + getReminderSettings()
  }
}

' Relationships between layers
HabitController --> Habit : uses
HabitController --> HabitLog : uses
ReportController --> HabitLog : analyzes
ReminderController --> ReminderSettingsModel : manages

' Controllers providing data to Views
HabitController --> HabitList
HabitController --> HabitItem
HabitController --> AddHabit
HabitController --> LogHabit

ReportController --> ReportPage
ReminderController --> ReminderSettings

' App navigation
App --> MainScreen
MainScreen --> HabitList
MainScreen --> AddHabit
MainScreen --> LogHabit
MainScreen --> ReportPage
MainScreen --> ReminderSettings

HabitList --> HabitItem

@enduml
